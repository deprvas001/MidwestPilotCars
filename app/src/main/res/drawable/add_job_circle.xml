<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#ffffff" />
            <size
                android:width="56dp"
                android:height="56dp"/>
            <padding android:top="5dp"
                android:right="5dp"
                android:left="5dp"
                 android:bottom="5dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="45"
                android:gradientRadius="49.5dp"
                android:startColor="#ff6600"
                android:endColor="#f7b500" />
            <size
                android:width="48dp"
                android:height="48dp"/>
            <padding android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>
    </item>
</layer-list>