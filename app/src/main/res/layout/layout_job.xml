<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/new_job_border"
    android:elevation="10dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <View
                android:id="@+id/courier_image"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/icon"
                android:padding="20dp" />

            <TextView
                android:id="@+id/courier_name"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/courier_image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Kenko Logistics"
                android:textColor="@android:color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:id="@+id/new_job_car"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@mipmap/new_job_car" />

            <View
                android:id="@+id/progress_car"
                android:layout_width="140dp"
                android:layout_height="7dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_progress_car" />

            <TextView
                android:id="@+id/car_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/courier_image"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Walnut Creek"
                android:textColor="@android:color/black"
                android:textSize="8sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/forward_circle"
            android:src="@drawable/ic_forward_icon" />

    </LinearLayout>


</LinearLayout>




