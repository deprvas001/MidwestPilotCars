<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/day_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Day"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/choose_costing_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_count" />

    <TextView
        android:id="@+id/day_wise_date_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_costing_from" />

    <TextView
        android:id="@+id/no_go_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/day_wise_date_rate" />

    <TextView
        android:id="@+id/miles_travell_caluclate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_go_price"/>

    <TextView
        android:id="@+id/status_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/miles_travell_caluclate"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/status_id"
        android:background="@android:color/white"/>

</RelativeLayout>